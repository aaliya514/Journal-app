@inherits LayoutComponentBase
@inject JournalService JournalService
@inject NavigationManager Navigation

@if (JournalService.IsAuthenticated())
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>
        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
else
{
    <div class="page">
        <main>
            <article class="content">
                @Body
            </article>
        </main>
    </div>
}
