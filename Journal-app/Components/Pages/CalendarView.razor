@page "/calendar-view"
@inject JournalService JournalService
@inject NavigationManager Navigation

<div style="min-height: 100vh; padding: 2rem;">
    <div style="max-width: 1400px; margin: 0 auto;">
        <div style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(20px); border-radius: 24px; padding: 2rem; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; margin-bottom: 2rem;">
                <div>
                    <h1 style="font-size: 2.5rem; font-weight: 800; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.5rem;">
                        üìÖ Calendar View
                    </h1>
                    <p style="color: #64748b; font-size: 1rem;">Navigate through your journal entries</p>
                </div>
                <button @onclick="GoToDashboard" style="padding: 0.75rem 1.5rem; background: white; color: #6366f1; border: 2px solid #6366f1; border-radius: 12px; font-weight: 600; cursor: pointer;">
                    ‚Üê Back to Dashboard
                </button>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
                <button @onclick="PreviousMonth" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; border-radius: 12px; font-weight: 600; cursor: pointer;">
                    ‚Üê Previous
                </button>
                <h2 style="font-size: 1.75rem; font-weight: 700; color: #1e293b;">
                    @currentMonth.ToString("MMMM yyyy")
                </h2>
                <button @onclick="NextMonth" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; border-radius: 12px; font-weight: 600; cursor: pointer;">
                    Next ‚Üí
                </button>
            </div>

            <div style="display: grid; grid-template-columns: repeat(7, 1fr); gap: 0.5rem; margin-bottom: 1rem;">
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Sun</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Mon</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Tue</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Wed</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Thu</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Fri</div>
                <div style="text-align: center; font-weight: 700; padding: 0.75rem; color: #64748b;">Sat</div>
            </div>

            <div style="display: grid; grid-template-columns: repeat(7, 1fr); gap: 0.75rem;">
                @foreach (var day in calendarDays)
                {
                    var entry = entries.FirstOrDefault(e => e.EntryDate.Date == day.Date);
                    var isToday = day.Date == DateTime.Today;
                    var isCurrentMonth = day.Month == currentMonth.Month;

                    <div @onclick="() => SelectDay(day)" style="@GetDayStyle(entry, isToday, isCurrentMonth)">
                        <div style="@(isCurrentMonth ? "font-weight: 600;" : "opacity: 0.4;")">
                            @day.Day
                        </div>

                        @if (entry != null)
                        {
                            <div style="font-size: 1.5rem; margin-top: 0.25rem;">
                                @MoodConstants.GetMoodEmoji(entry.PrimaryMood)
                            </div>
                        }
                    </div>
                }
            </div>

            <div style="display: flex; gap: 2rem; margin-top: 2rem; flex-wrap: wrap; justify-content: center;">
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <div style="width: 24px; height: 24px; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 6px;"></div>
                    <span style="color: #64748b; font-size: 0.875rem; font-weight: 500;">Positive</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <div style="width: 24px; height: 24px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); border-radius: 6px;"></div>
                    <span style="color: #64748b; font-size: 0.875rem; font-weight: 500;">Neutral</span>
                </div>
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <div style="width: 24px; height: 24px; background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); border-radius: 6px;"></div>
                    <span style="color: #64748b; font-size: 0.875rem; font-weight: 500;">Negative</span>
                </div>
            </div>
        </div>

        @if (selectedEntry != null)
        {
            <div style="background: white; padding: 2rem; border-radius: 16px; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1); border-left: 4px solid #6366f1;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
                    <div>
                        <h3 style="font-size: 1.75rem; font-weight: 700; margin-bottom: 0.5rem; color: #1e293b;">
                            @(string.IsNullOrWhiteSpace(selectedEntry.Title) ? "Untitled Entry" : selectedEntry.Title)
                        </h3>
                        <p style="color: #64748b; font-size: 0.95rem;">@selectedEntry.EntryDate.ToString("dddd, MMMM dd, yyyy")</p>
                    </div>
                    <button @onclick="() => EditEntry(selectedEntry.Id)" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; border-radius: 12px; font-weight: 600; cursor: pointer;">
                        ‚úèÔ∏è Edit Entry
                    </button>
                </div>

                <div style="display: flex; gap: 0.5rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
                    <span style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; border-radius: 20px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%); border: 2px solid rgba(99, 102, 241, 0.2); font-weight: 600;">
                        @MoodConstants.GetMoodEmoji(selectedEntry.PrimaryMood) @selectedEntry.PrimaryMood
                    </span>
                    @if (!string.IsNullOrWhiteSpace(selectedEntry.SecondaryMood1))
                    {
                        <span style="padding: 0.5rem 1rem; border-radius: 20px; background: #f1f5f9; color: #64748b; font-weight: 500;">
                            @MoodConstants.GetMoodEmoji(selectedEntry.SecondaryMood1) @selectedEntry.SecondaryMood1
                        </span>
                    }
                    @if (!string.IsNullOrWhiteSpace(selectedEntry.SecondaryMood2))
                    {
                        <span style="padding: 0.5rem 1rem; border-radius: 20px; background: #f1f5f9; color: #64748b; font-weight: 500;">
                            @MoodConstants.GetMoodEmoji(selectedEntry.SecondaryMood2) @selectedEntry.SecondaryMood2
                        </span>
                    }
                </div>

                <p style="color: #334155; line-height: 1.8; margin-bottom: 1.5rem; white-space: pre-wrap;">@selectedEntry.Content</p>

                <div style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap; padding-top: 1rem; border-top: 1px solid #e2e8f0;">
                    <span style="color: #64748b; font-size: 0.875rem;">üìù @selectedEntry.WordCount words</span>
                    @if (selectedEntry.Tags.Any())
                    {
                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                            @foreach (var tag in selectedEntry.Tags)
                            {
                                <span style="padding: 0.375rem 0.875rem; border-radius: 16px; background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); color: #075985; border: 1px solid #bae6fd; font-size: 0.8125rem; font-weight: 500;">
                                    @tag
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    private DateTime currentMonth = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
    private List<DateTime> calendarDays = new();
    private List<JournalEntry> entries = new();
    private JournalEntry? selectedEntry = null;

    protected override void OnInitialized()
    {
        if (!JournalService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }

        LoadCalendar();
        LoadEntries();
    }

    private void LoadCalendar()
    {
        calendarDays.Clear();
        var firstDay = new DateTime(currentMonth.Year, currentMonth.Month, 1);
        var lastDay = firstDay.AddMonths(1).AddDays(-1);

        var startDay = firstDay.AddDays(-(int)firstDay.DayOfWeek);
        var endDay = lastDay.AddDays(6 - (int)lastDay.DayOfWeek);

        for (var day = startDay; day <= endDay; day = day.AddDays(1))
        {
            calendarDays.Add(day);
        }
    }

    private void LoadEntries()
    {
        entries = JournalService.GetAllEntries();
    }

    private void PreviousMonth()
    {
        currentMonth = currentMonth.AddMonths(-1);
        LoadCalendar();
        selectedEntry = null;
    }

    private void NextMonth()
    {
        currentMonth = currentMonth.AddMonths(1);
        LoadCalendar();
        selectedEntry = null;
    }

    private void SelectDay(DateTime day)
    {
        var entry = entries.FirstOrDefault(e => e.EntryDate.Date == day.Date);
        if (entry != null)
        {
            selectedEntry = entry;
        }
        else if (day.Date >= DateTime.Today.AddDays(-30) && day.Date <= DateTime.Today)
        {
            Navigation.NavigateTo("/entry-form");
        }
    }

    private void EditEntry(int id)
    {
        Navigation.NavigateTo($"/entry-form/{id}");
    }

    private void GoToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }

    private string GetDayStyle(JournalEntry? entry, bool isToday, bool isCurrentMonth)
    {
        var baseStyle = "aspect-ratio: 1; border: 2px solid; border-radius: 12px; padding: 0.75rem; display: flex; flex-direction: column; align-items: center; justify-content: center; cursor: pointer; transition: all 0.3s;";

        if (entry != null)
        {
            var category = MoodConstants.GetMoodCategory(entry.PrimaryMood);
            if (category == "Positive")
            {
                return baseStyle + " background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border-color: #059669;";
            }
            else if (category == "Neutral")
            {
                return baseStyle + " background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; border-color: #2563eb;";
            }
            else if (category == "Negative")
            {
                return baseStyle + " background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border-color: #dc2626;";
            }
            else
            {
                return baseStyle + " background: white; border-color: #e2e8f0;";
            }
        }
        else
        {
            if (isToday)
            {
                return baseStyle + " background: white; border-color: #6366f1; border-width: 3px; box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);";
            }
            else
            {
                return baseStyle + " background: white; border-color: #e2e8f0;";
            }
        }
    }
}
