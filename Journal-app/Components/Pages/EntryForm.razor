@page "/entry-form"
@page "/entry-form/{EntryId:int}"
@inject JournalService JournalService
@inject NavigationManager Navigation

<div style="min-height: 100vh; padding: 2rem;">
    <div style="max-width: 900px; margin: 0 auto;">
        <div style="background: white; border-radius: 24px; padding: 2.5rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">

            <h1 style="font-size: 2rem; font-weight: 700; color: #6366f1; margin-bottom: 1rem;">Journal Entry</h1>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Entry Date</label>
                <input type="date" @bind="currentEntry.EntryDate" style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;" />
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Title</label>
                <input type="text" @bind="currentEntry.Title" placeholder="Entry title..." style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;" />
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Content</label>
                <textarea @bind="currentEntry.Content" rows="10" placeholder="Write here..." style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px; resize: vertical;"></textarea>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Primary Mood (Required)</label>
                <select @bind="currentEntry.PrimaryMood" style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;">
                    <option value="">Select mood...</option>
                    <option value="Happy">Happy</option>
                    <option value="Excited">Excited</option>
                    <option value="Relaxed">Relaxed</option>
                    <option value="Grateful">Grateful</option>
                    <option value="Confident">Confident</option>
                    <option value="Calm">Calm</option>
                    <option value="Thoughtful">Thoughtful</option>
                    <option value="Curious">Curious</option>
                    <option value="Nostalgic">Nostalgic</option>
                    <option value="Bored">Bored</option>
                    <option value="Sad">Sad</option>
                    <option value="Angry">Angry</option>
                    <option value="Stressed">Stressed</option>
                    <option value="Lonely">Lonely</option>
                    <option value="Anxious">Anxious</option>
                </select>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Secondary Mood 1 (Optional)</label>
                <select @bind="currentEntry.SecondaryMood1" style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;">
                    <option value="">None</option>
                    <option value="Happy">Happy</option>
                    <option value="Excited">Excited</option>
                    <option value="Relaxed">Relaxed</option>
                    <option value="Grateful">Grateful</option>
                    <option value="Confident">Confident</option>
                    <option value="Calm">Calm</option>
                    <option value="Thoughtful">Thoughtful</option>
                    <option value="Curious">Curious</option>
                    <option value="Nostalgic">Nostalgic</option>
                    <option value="Bored">Bored</option>
                    <option value="Sad">Sad</option>
                    <option value="Angry">Angry</option>
                    <option value="Stressed">Stressed</option>
                    <option value="Lonely">Lonely</option>
                    <option value="Anxious">Anxious</option>
                </select>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Secondary Mood 2 (Optional)</label>
                <select @bind="currentEntry.SecondaryMood2" style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;">
                    <option value="">None</option>
                    <option value="Happy">Happy</option>
                    <option value="Excited">Excited</option>
                    <option value="Relaxed">Relaxed</option>
                    <option value="Grateful">Grateful</option>
                    <option value="Confident">Confident</option>
                    <option value="Calm">Calm</option>
                    <option value="Thoughtful">Thoughtful</option>
                    <option value="Curious">Curious</option>
                    <option value="Nostalgic">Nostalgic</option>
                    <option value="Bored">Bored</option>
                    <option value="Sad">Sad</option>
                    <option value="Angry">Angry</option>
                    <option value="Stressed">Stressed</option>
                    <option value="Lonely">Lonely</option>
                    <option value="Anxious">Anxious</option>
                </select>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Category (Optional)</label>
                <input type="text" @bind="currentEntry.Category" placeholder="Personal, Work, Travel..." style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;" />
            </div>

            <div style="margin-bottom: 2rem;">
                <label style="display: block; font-weight: 600; margin-bottom: 0.5rem;">Tags (Optional)</label>
                <input type="text" @bind="tagInput" placeholder="Tags separated by commas..." style="width: 100%; padding: 0.875rem; border: 2px solid #e2e8f0; border-radius: 12px;" />
            </div>

            <div style="display: flex; gap: 1rem;">
                <button @onclick="SaveEntry" style="padding: 0.875rem 2rem; background: #6366f1; color: white; border: none; border-radius: 12px; font-weight: 600; cursor: pointer;">Save</button>
                <button @onclick="Cancel" style="padding: 0.875rem 2rem; background: white; color: #64748b; border: 2px solid #e2e8f0; border-radius: 12px; font-weight: 600; cursor: pointer;">Cancel</button>
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? EntryId { get; set; }

    private JournalEntry currentEntry = new JournalEntry();
    private string tagInput = "";

    protected override void OnInitialized()
    {
        if (!JournalService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }

        if (EntryId.HasValue)
        {
            var entry = JournalService.GetEntryById(EntryId.Value);
            if (entry != null)
            {
                currentEntry = entry;
                tagInput = string.Join(", ", currentEntry.Tags);
            }
        }
        else
        {
            currentEntry.EntryDate = DateTime.Today;
        }
    }

    private void SaveEntry()
    {
        if (string.IsNullOrWhiteSpace(currentEntry.PrimaryMood))
        {
            return;
        }

        if (!string.IsNullOrWhiteSpace(tagInput))
        {
            currentEntry.Tags = new List<string>();
            string[] tags = tagInput.Split(',');
            for (int i = 0; i < tags.Length; i++)
            {
                string t = tags[i].Trim();
                if (!string.IsNullOrWhiteSpace(t))
                {
                    currentEntry.Tags.Add(t);
                }
            }
        }

        if (EntryId.HasValue)
        {
            JournalService.UpdateEntry(currentEntry);
        }
        else
        {
            JournalService.AddEntry(currentEntry);
        }

        Navigation.NavigateTo("/dashboard");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/dashboard");
    }
}

